<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sudoku6x6.Controller"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2); -fx-padding: 20;">

    <!-- Título del juego -->
    <Label text="Sudoku 6x6"
           style="-fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);"
    >
        <font>
            <Font size="32"/>
        </font>
    </Label>

    <!-- Cuadrícula del Sudoku -->
    <GridPane fx:id="gridSudoku"
              alignment="CENTER"
              hgap="2"
              vgap="2"
              style="-fx-border-color: #FFD700; -fx-border-width: 3; -fx-background-color: #f9f9f9;"
              prefWidth="400"
              prefHeight="400"
    />

    <!-- Panel de botones -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnNuevoJuego"
                text="Nuevo Juego"
                style="-fx-background-color: linear-gradient(to right, #00D084, #00FF88);
                       -fx-text-fill: #1a1a1a;
                       -fx-font-weight: bold;
                       -fx-padding: 8 16;
                       -fx-font-size: 13px;
                       -fx-background-radius: 8;
                       -fx-effect: dropshadow(gaussian, rgba(0,255,136,0.4), 8, 0, 0, 3);">
            <font>
                <Font name="System Bold" size="13"/>
            </font>
        </Button>
        <Button fx:id="btnAyuda"
                text="Ayuda"
                style="-fx-background-color: linear-gradient(to right, #FF6B35, #F7931E);
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-padding: 8 16;
                       -fx-font-size: 13px;
                       -fx-background-radius: 8;
                       -fx-effect: dropshadow(gaussian, rgba(255,107,53,0.4), 8, 0, 0, 3);">
            <font>
                <Font name="System Bold" size="13"/>
            </font>
        </Button>
    </HBox>

    <!-- Estado del juego -->
    <Label fx:id="lblEstado"
           text="Bienvenido al Sudoku 6x6"
           style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-font-weight: bold;"
           wrapText="true"
           maxWidth="380"
           alignment="CENTER">
        <font>
            <Font name="System Bold" size="14"/>
        </font>
    </Label>

</VBox>